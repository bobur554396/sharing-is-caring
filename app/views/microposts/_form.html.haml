%a.button(href="#" data-reveal-id="link") Link
%div#link.reveal-modal.small(data-reveal)
  %div.row
    = simple_form_for(@micropost, :html => {:multipart => true}) do |f|
      = f.error_notification
      %div.small-9.medium-9.small-centered.columns
        .form-inputs
          = f.label :content, "link"
          = f.text_field :content, :id => 'url'
      %div.medium-3.large-3.columns
        .form-actions
          = f.button :submit, 'Add', class: 'button button-secondary button-large button-block button-caps'
  %a.close-reveal-modal &#215;
